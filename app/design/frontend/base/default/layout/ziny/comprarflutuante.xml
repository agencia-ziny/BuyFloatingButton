<layout version="0.1.0">
    <catalog_product_view>
        <reference name="head">
            <action method="addJs">
                <script>ziny/comprarflutuante/geral.js</script>
            </action>
            <action method="addCss">
                <stylesheet>ziny/comprarflutuante/css/geral.css.php</stylesheet>
            </action>
        </reference>
        <reference name="product.info.form">         
            <block type="comprarflutuante/comprarflutuante" name="ziny.comprarflutuante" template="ziny/comprarflutuante/addtocart.phtml" output="toHtml"/>      
        </reference>
    </catalog_product_view>
</layout>